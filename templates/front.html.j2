{% extends "base.html.j2" %}

{% block content %}
<div class="row">
  <div class="col-md-12">
    <h1 class="text-center">Latest Posts</h1>
  </div>
</div>
  {% if posts %}
    {% for post in posts %}
    <div class="row">
      <div class="col-md-12 align-center post-front">
        {{ post.render() | safe }}
      </div>
    </div>
    <br>
    {% endfor %}
  {% else %}
    <div class="row justify-content-center">
      <div class="col-6">
        <div class="alert alert-info text-center" role="alert">
          <strong>Oh no!</strong> There's nothing here yet! <strong> Come back soon</strong>
        </div>
      </div>
    </div>
  {% endif %}

{% endblock %}
