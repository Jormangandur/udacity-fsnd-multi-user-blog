{% extends "base.html.j2" %}

{% block content %}
  {% if posts %}
    {% for post in posts %}
      <div class="row">
        <div class="col-md-12 align-center post-front">
          {{ post.render() | safe }}
        </div>
      </div>
      <br>
    {% endfor %}
  {% else %}
  <div class="row justify-content-center">
    <div class="col-6">
      <div class="alert alert-info text-center" role="alert">
        <strong>Damn</strong>, couldn't find any posts with a title like that :/
      </div>
    </div>
  </div>
  {% endif %}
{% endblock %}
