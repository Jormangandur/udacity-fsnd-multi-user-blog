{% extends "base.html.j2" %}

{% block content %}
<div class="row">
  <div class="col-md-12">
    <h1 class="text-center">Login</h1>
  </div>
</div>
<div class="row">
  <div class="col-xs-12 col-sm-6 offset-sm-3 col-md-4 offset-md-4">
    <form class="form-login"method="post">
      <div class="form-group">
        <label for="usernameInput">Username</label>
        <input class="form-control" id="usernameInput" type="text" value="{{username}}" name="username" required>
      </div>
      <div class="form-group">
        <label for="passwordInput">Password</label>
        <input class="form-control" id="passwordInput"type="password" name="password" required>
      </div>
      {% if error %}
        <div class="alert alert-danger"><strong>Woops! </strong>{{error}}</div>
      {% endif %}
      <button type="submit" class="btn btn-primary btn-block">Submit</button>
    </form>
  </div>
</div>
<div class="row">
  <div class="col-xs-12 col-sm-6 offset-sm-3 col-md-4 offset-md-4">
    <div class="text-center">
        <p>Not one of us yet?</p>
        <a class="btn btn-secondary" href="/blog/signup">Signup</a>
    </div>
  </div>
</div>
{% endblock %}
