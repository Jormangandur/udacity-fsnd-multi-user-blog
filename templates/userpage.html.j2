{% extends "base.html.j2" %}

{% block content %}
  <h1>Summary for {{user.username}}</h1>
  <div class="user-posts">
    <h3>Your posts:</h3>
    <ul>
      {% for post in posts %}
        <li><a href="/blog/{{ post.key().id() }}">{{ post.subject }}</a></li>
      {% endfor %}
    </ul>
  </div>
  <div class="user-comments">
    <h3>Your comments:</h3>
    <ul>
      {% for item in comment_subject_tuple %}
        <li><a href="/blog/{{ item[0].post_id }}">{{item[1]}}</a>
        <ul>
          <li>{{ item[0].content }}</li>
        </ul>
      {% endfor %}
    </ul>
  </div>
  <div class="user-likes">
    <h3>Your likes:</h3>
    <ul>
      {% for item in like_subject_tuple %}
        <li><a href="/blog/{{ item[0].post_id }}">{{item[1]}}</a></li>
      {% endfor %}
    </ul>
  </div>
{% endblock %}
